@import "nib"
@import "fonts.styl"
@import "normalize.styl"

vendor-prefixes = webkit o ms moz official

gris_muy_oscuro = #1E1E1E
gris_oscuro = #333333
gris_claro = #818181
rojo = #BD255B
gris_mas_claro = #F0F0F0

html
	font-family 'Open Sans', sans-serif
	font-size 16px

/* Utilidades */

.u-title
	color #00CCFF
	border-bottom 2px dashed #00CCFF
	font-weight normal
	text-align center
	font-size 1.5em
	padding-bottom .5em

/* Header */

.Header
	background-image url("../img/portada.jpg")
	background-repeat no-repeat
	background-position center
	background-size cover
	margin-top 3.75em
	text-align center
	padding 1.2em 0

.Header-image
	border 5px solid white
	border-radius 50%

.Header-imageContainer
	margin 0

.Header-link, Header-name
	color white

.Header-link
	font-size 2.2em
	font-weight bold
	text-decoration none

.Header-name
	font-size 1.5em
	font-weight 300
	margin 0

/* Menu */

.MainMenu
	background gris_muy_oscuro
	text-align center
	height 3.75em
	position fixed
	right 0
	left 0
	top 0

.MainMenu-list
	margin 0
	padding 0

.MainMenu-item
	display inline-block

.MainMenu-link
	color #00DBFF
	text-decoration none
	line-height 3.75em
	margin-right 1.5em

/* Profile */

.Profile
	text-align center

.Profile-link
	background orange
	color white
	text-decoration none
	padding .5em 1em
	border-radius 2em
	margin-right

/* Work */

.Work
	margin-top 3em
	text-align center

.Work-description
	font-size 1.1em
	color #515151
	font-style italic

.Work-item
	display inline-block
	text-align center
	margin-right 1.8em
	margin-bottom 1.8em

.Work-imageContainer
	margin 0

/* Footer */

.Footer
	background-image url("../img/footer.jpg")
	background-repeat no-repeat
	background-position center
	background-size cover
	padding 1em 0
	text-align center

.Footer-form
	text-align center
	display inline-block


.Footer-formInput, .Footer-textarea
	background white
	border none
	display block
	border-radius 2em
	padding .8em
	margin 0 auto 1em

.Footer-button
	background orange
	color white
	border-radius 1em
	padding .5em 1em
	border 0

.Footer-left
	display inline-block
	width 32em
	text-align center
	vertical-align top

.Footer-title
	color white
	


gris_mas_claro = #F0F0F0